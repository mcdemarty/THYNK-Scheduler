<?xml version="1.0" encoding="UTF-8"?>

<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    
    <apiVersion>48.0</apiVersion>
    
    <description>Scheduler Lwc</description>
    
    <isExposed>true</isExposed>
    
    <masterLabel>Scheduler Lwc</masterLabel>
    
    <targets>
        
        <target>lightning__RecordPage</target>
        
        <target>lightning__AppPage</target>
        
        <target>lightning__HomePage</target>
        
    </targets>
    
    <targetConfigs>
        
        <targetConfig targets="lightning__RecordPage,lightning__AppPage,lightning__HomePage">
            
            <property name="schedulerFieldsMetadataName" type="String" label="Field Metadata Name"/>
            
            <property name="secondSchedulerFieldsMetadataName" type="String" label="Second Instance Field Metadata Name"/>
            
            <property name="eventCustomFilter" type="String" label="Event Custom Filter"/>
            
            <property name="secondEventCustomFilter" type="String" label="Second Instance Event Custom Filter"/>
            
            <property name="resourceCustomFilter" type="String" label="Resource Custom Filter"/>
            
            <property name="secondResourceCustomFilter" type="String" label=" Second Instance Resource Custom Filter"/>
            
            <property name="resourceOrderRule" type="String" label="Resource Order Rule"/>
            
            <property name="componentHeight" type="String" label="Component Height" default="300px"/>
            
            <property name="eventMargin" type="String" label="Event Margin" default="16px"/>
            
            <property name="eventLayoutType" type="String" label="Event Layout Type" default="stack" datasource="stack,pack,overlap"/>
            
            <property name="responsiveType" type="String" label="Responsive" default="Normal" datasource="Normal,Small"/>
            
            <property name="enableColumnFiltering" type="Boolean" label="Event Column Filtering"/>
            
            <property name="showFieldNamesWhenHovered" type="Boolean" label="Show Field Names when an Event hovered"/>
            
            <property name="columnsOnRight" type="Boolean" label="Columns on Right Side"/>
            
            <property name="columnsAutoHeight" type="Boolean" label="Columns Auto Height"/>
            
            <property name="useOverbookingFlow" type="Boolean" label="Use overbooking flow"/>
            

            <property name="headingFont" type="String" label="Heading Font"/>
            
            <property name="headingFontSize" type="String" label="Heading Font Size" default="16px"/>
            
            <property name="headingFontColor" type="String" label="Heading Font Color" default="black"/>
            
            <property name="headingAlignment" type="String" label="Heading Alignment" datasource="Left,Center,Right"/>
            

            <property name="resourceHeadingFont" type="String" label="Resource Heading Font"/>
            
            <property name="resourceHeadingFontSize" type="String" label="Resource Heading Font Size" default="16px"/>
            
            <property name="resourceHeadingFontColor" type="String" label="Resource Heading Font Color" default="black"/>
            
            <property name="resourceHeadingAlignment" type="String" label="Resource Heading Alignment" datasource="Left,Center,Right"/>

            <property name="rowHeight" type="Integer" label="Row Height" default="40"/>

        </targetConfig>
        
    </targetConfigs>
    
</LightningComponentBundle>
